---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/astro/Header.astro';
import SectionLink from '@/components/astro/SectionLink.astro'
import SectionInformation from '@/components/astro/SectionInformation.astro';
import SectionListItem from '@/components/astro/SectionListItem.astro';
import SectionListItemLink from '@/components/astro/SectionListItemLink.astro';
import { FormEmail } from '@/components/react/FormEmail'
import PostCard from '@/components/astro/PostCard.astro';
import type { Frontmatter } from 'types/Frontmatter';
const posts = await Astro.glob<Frontmatter>('../pages/blog/posts/*.mdx');
---

<Layout title="Cristian Fonseca">
	<main class="pt-20 items-center flex flex-col px-4 w-screen">
		<Header />
		<section class="flex items-center max-w-[330px] mb-8 flex-col">
			<SectionLink emoji="🖤" text="Example text" href="#"/>
			<SectionLink emoji="🖤" text="Example text" href="#"/>
			<SectionLink emoji="🖤" text="Example text" href="#"/>
			<SectionLink emoji="🖤" text="Example text" href="#"/>
			<SectionLink emoji="🖤" text="Example text" href="#"/>
		</section>
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-5">
			<SectionInformation title="About Me">
				<SectionListItem emoji="🙍🏻‍♂️" text="28 years old"/>
				<SectionListItem emoji="🇧🇷" text="From Brasil"/>
				<SectionListItem emoji="👨🏻‍💻" text="Software Developer"/>
				<SectionListItem emoji="🔨" text="Full-time Engineer"/>
				<SectionListItem emoji="⚡️" text="Love rain 🌧"/>
			</SectionInformation>
			<SectionInformation title="Code">
				<SectionListItemLink emoji="🎒" text="Showwcase" href="https://cristian-devk.showwcase.com/" description="7 Tweets last 7 hours"/>
				<SectionListItemLink emoji="⌨️" text="Github" href="https://github.com/kuzeofficial" description="7 Tweets last 7 hours"/>
			</SectionInformation>
			<SectionInformation title="Social Networks">
				<SectionListItemLink emoji="🐦" text="Twitter" href="https://twitter.com/cristian_devk" description="7 Tweets last 7 hours"/>
				<SectionListItemLink emoji="🌄" text="Instagram" href="https://www.instagram.com/kuze_oficial/" description="7 Tweets last 7 hours"/>
				<SectionListItemLink emoji="💼" text="Linkedin" href="https://www.linkedin.com/in/cristian-fonseca-c-04972b224/" description="7 Tweets last 7 hours"/>
			</SectionInformation>
			<SectionInformation title="Writings">
				<SectionListItemLink emoji="💌" text="Newsletter" href="#" description="Comming soon"/>
				<SectionListItemLink emoji="📝" text="Blog" href="#blog" description="7 Tweets last 7 hours"/>
			</SectionInformation>
			<SectionInformation title="Others">
				<SectionListItemLink emoji="💙" text="Devlarket" href="https://devlarket.com/" description="Cooming Soon"/>
				<SectionListItemLink emoji="📫" text="Email" href="mailto:contact@cristianfonseca.dev" description="Only for collaboration work, please"/>
				<SectionListItemLink emoji="💰" text="Paypal" href="https://www.paypal.com/donate/?business=XVQYEY8UFRAL2&no_recurring=0&item_name=Support+me+in+continuing+to+develop+things+that+help+and+inspire+others.&currency_code=USD" description="Support me"/>
			</SectionInformation>
		</div>
		<div class="my-10">
			<div>
				<p class="m-2.5 text-center dark:text-white">Get notified when I release new stuff! 👇</p>
				<FormEmail client:visible/>
			</div>
		</div>
		<div id="blog" class="w-full flex items-center flex-col max-w-[600px]">
			<h3 class="text-3xl font-bold my-5 dark:text-white">Latest Posts✨</h3>
				{posts.map((post) => (
						<PostCard post={post} />
				))}
		</div>
	</main>
</Layout>

